{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1>Create an account</h1>

		{% if form_errors(form) %}
			<div class="alert alert-danger">
				{{ form_errors(form) }}
			</div>
		{% endif %}

		{{ form_start(form, {'action': path('new_user'), 'method': 'POST'}) }}
		<div class="form-group">
			{{ form_label(form.username, 'Username:') }}
			{{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Enter username'}}) }}
		</div>

		<div class="form-group">
			{{ form_label(form.password.first, 'Password:') }}
			{{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
		</div>

		<div class="form-group">
			{{ form_label(form.password.second, 'Confirm Password:') }}
			{{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm password'}}) }}
		</div>

		<button type="submit" class="btn btn-primary">Register</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
